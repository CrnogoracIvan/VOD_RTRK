<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivancrnogorac.vod_rtrk.activity.MainActivity">

    <LinearLayout
        android:layout_width="576dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/leftSide"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <LinearLayout
            android:id="@+id/firstTitleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMovieTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Title:"
                android:textStyle="bold|italic"
                android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondTitleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:textStyle="bold|italic"
                    android:textColor="@color/accent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstActorsLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtActorsName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:text="Actor names:"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondActorsLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/actorsName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:textColor="@color/accent" />
            </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/rightSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:textColor="@android:color/white">
            <!--android:layout_weight="5"-->>
            </GridView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>